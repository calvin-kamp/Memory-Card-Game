{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "isolatedModules": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,

        "paths": {
            "@assets/*": ["./src/assets/*"],
            "@models": ["./src/models/*"],
            "@utils": ["./src/utils/*"],
            "@stores/*": ["./src/stores/*"],
            "@templates/*": ["./src/templates/*"]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}