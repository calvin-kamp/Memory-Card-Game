{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "isolatedModules": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["vite/client", "node"],

        "paths": {
            "@root/*": ["./src/*"],
            "@models/*": ["./src/models/*"],
            "@utils/*": ["./src/utils/*"],
            "@stores/*": ["./src/stores/*"],
            "@pages/*": ["./src/pages/*"],
            "@templates/*": ["./src/templates/*"]
        }
    },
    "include": [
        "src",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}